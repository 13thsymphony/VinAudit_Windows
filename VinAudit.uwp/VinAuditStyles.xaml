<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VinAudit">

    <!-- Extracted from the VinAudit.com website -->
    <LinearGradientBrush x:Key="VinAuditVerticalGreenGradient" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#7FC63A" Offset="0" />
        <GradientStop Color="#527D58" Offset="1" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="VinAuditDarkGreenSolid" Color="#0E7310"></SolidColorBrush>

    <x:String x:Key="AppName">VinAudit</x:String>
    <Thickness x:Key="OuterPanelBorder">20</Thickness>
    <Thickness x:Key="InnerPanelBorder">8</Thickness>

</ResourceDictionary>
